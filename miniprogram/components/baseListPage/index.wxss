/* components/baseListPage/index.wxss */
page{
    height: 100%;
    width: 100%;
  }
  .code_box{
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    /*布局方向是垂直的*/
    flex-direction: column;
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: white;
    height: 100vh;
  }
  .header {
    height: 35px;
    text-align: center;
    /* border-bottom: 1px solid #d1d1d1; */
  }
  
  .footer {
    height: 40px;
    text-align: center;
    display: flex;
    flex-direction: column;
  }
  .center {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    width: 100%;
    overflow-y: scroll;
  }

  .code_box_title {
    color: rgba(0, 0, 0, 0.5);
    font-size: 26rpx;
    margin-bottom: 20rpx;
    text-align: left;
  }
  
  .code_box_record {
    display: flex;
  }
  
  .code_box_record_content{
    height: 70px;
    width: 95%;
    margin: 0 auto;
  }
  
  .image {
    width: 50px;
    height: 50px;
    margin-right: 10px;
  }
  
  .code_box_record_title {
    font-size: 26rpx;
    color: rgba(0, 0, 0, 0.5);
    padding: 20rpx 0;
  }
  
  .code_box_record_title_content {
    width: 50%;
  }
  
  .code_box_record_title_number {
    width: 20%;
  }
  
  .code_box_record_title_time {
    width: 30%;
  }
  
  .code_box_record_detail {
    width: 50%;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .code_box_record_detail_mission {
    color: #07c160;
  }
  
  .code_box_record_detail_goods {
    color: #e20808;
  }
  
  .code_box_record_detail_content {
    width: 50%;
  }
  
  .code_box_record_detail_number {
    width: 20%;
  }
  
  .code_box_record_detail_time {
    width: 30%;
  }